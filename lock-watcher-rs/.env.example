# Network to connect to: mainnet or sepolia
NETWORK=sepolia

# RPC URLs
ETH_RPC_URL=https://eth.llamarpc.com
SEPOLIA_RPC_URL=https://1rpc.io/sepolia

# Optional WebSocket URLs (for real-time event watching in future)
# ETH_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# SEPOLIA_WS_URL=wss://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Lock Vault contract addresses (set after deployment)
# MAINNET_LOCK_VAULT_ADDRESS=0x...
SEPOLIA_LOCK_VAULT_ADDRESS=0x...

# Signer private key (for future use)
# WARNING: Never commit real private keys!
# SIGNER_PRIVATE_KEY=0x...

# Database path
DB_PATH=./data/locks.db

# Polling interval in milliseconds
POLL_INTERVAL_MS=5000

# Logging level (error, warn, info, debug, trace)
RUST_LOG=info
